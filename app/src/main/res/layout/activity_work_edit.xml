<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3FFC3"
        tools:context="ru.mail.fancywork.ui.secondary.WorkspaceActivity">

    <com.otaliastudios.zoom.ZoomLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="horizontal|vertical"
            android:layout_marginBottom="150dp"
            android:background="@color/white"
            app:hasClickableChildren="true"
            app:horizontalPanEnabled="true"
            app:verticalPanEnabled="true"
            app:zoomEnabled="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/zoomLayout">

        <ru.mail.fancywork.ui.view.ColorGridView
                android:id="@+id/color_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </com.otaliastudios.zoom.ZoomLayout>

    <TextView
            android:text="Масштаб"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/zoomLayout"
            android:layout_marginStart="20dp" />

    <com.google.android.material.slider.Slider
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:id="@+id/scaleSlider"
            android:valueFrom="10"
            android:valueTo="100"
            android:stepSize="1"
            app:thumbColor="#F6CE3E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView" />


    <TextView
            android:text="Цвета"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/textView"
            app:layout_constraintEnd_toEndOf="@id/textView"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/scaleSlider" />

    <com.google.android.material.slider.Slider
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:id="@+id/colorSlider"
            android:valueFrom="2"
            android:valueTo="10"
            android:stepSize="1"
            app:thumbColor="#F9B4FF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>
